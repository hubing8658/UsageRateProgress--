<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.iss.usagerateprogress"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="刷新" />
    
    <com.iss.usagerateprogress.UsageRateProgress
        android:id="@+id/urp1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        app:progress="70"
        app:nameTextColor="#C1C1C1"
        app:progressResidueColor="#FFE4E1"
        app:progressColor="#FF83FA"
        app:insideCircleColor="#C1FFC1"
        app:progressName="@string/cpu"
        app:openAnimotion="true" />

    <com.iss.usagerateprogress.UsageRateProgress
        android:id="@+id/urp2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        app:progressName="@string/memory"
        app:openAnimotion="false" />

</RelativeLayout>